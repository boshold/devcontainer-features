{
    "name": "Neovim (from source)",
    "id": "neovim-source",
    "version": "1.0.0",
    "dependsOn": {
      "ghcr.io/devcontainers/features/common-utils": {},
      "ghcr.io/devcontainers/features/git": {}
    },
    "description": "A feature to install Neovim building from source",
    "options": {
        "version": {
            "type": "string",
            "proposals": ["nightly", "stable", "v0.10.1", "v0.10.0", "v0.9.5", "v0.9.4", "v0.9.3", "v0.9.2", "v0.9.1", "v0.9.0"],
            "default": "stable",
            "description": "The version of Neovim to be installed (nightly, stable or a specific version in the format 'MAJOR.MINOR.PATCH' e.g. '1.0.0' or 'v1.0.0')"
        }
    },
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils",
        "ghcr.io/devcontainers/features/git"
    ]
}